{
	"name": "one-mutation",
	"version": "2.0.2",
	"description": "Lightweight event delegation",
	"keywords": [
		"oneMutation",
		"delegation",
		"event"
	],
	"repository": "fregante/one-mutation",
	"license": "MIT",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && xo && ava",
		"watch": "run-p --silent watch:*",
		"watch:build": "tsc --watch",
		"watch:test": "ava --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"import/extensions": "off",
			"import/no-useless-path-segments": "off",
			"unicorn/import-index": "off",
			"unicorn/no-object-as-default-parameter": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"ava": "^3.12.1",
		"jsdom": "^16.4.0",
		"npm-run-all": "^4.1.5",
		"sinon": "^9.2.1",
		"typescript": "^4.0.2",
		"xo": "^0.34.2"
	}
}
