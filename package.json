{
	"name": "one-mutation",
	"version": "3.0.0",
	"description": "Observe one mutation via `MutationObserver`, then resolve a Promise.",
	"keywords": [
		"mutationobserver",
		"mutations",
		"dom",
		"changes",
		"promise",
		"onchange",
		"added",
		"removed",
		"attributes",
		"elements",
		"notes",
		"once",
		"event"
	],
	"repository": "fregante/one-mutation",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"type": "module",
	"exports": "./index.js",
	"types": "./index.d.ts",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && xo && vitest run",
		"watch": "run-p --silent watch:*",
		"watch:build": "tsc --watch",
		"watch:test": "vitest"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"import/extensions": "off",
			"import/no-useless-path-segments": "off",
			"unicorn/import-index": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^5.0.0",
		"@types/jsdom": "^21.1.6",
		"jsdom": "^24.0.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.3",
		"vitest": "^1.4.0",
		"xo": "^0.58.0"
	},
	"engines": {
		"node": ">=18"
	}
}
